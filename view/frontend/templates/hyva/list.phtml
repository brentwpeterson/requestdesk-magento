declare(strict_types=1);

use Magento\Framework\Escaper;
use RequestDesk\Blog\Block\ListPosts;

/** @var Escaper $escaper */
/** @var ListPosts $block */

$posts = $block->getPosts();
?>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
        <?= $escaper->escapeHtml(__('Blog')) ?>
    </h1>

    <?php if ($posts->getSize()): ?>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <?php foreach ($posts as $post): ?>
                <article class="card bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <?php if ($post->getFeaturedImage()): ?>
                        <a href="<?= $escaper->escapeUrl($block->getPostUrl($post)) ?>"
                           class="block aspect-video overflow-hidden">
                            <img src="<?= $escaper->escapeUrl($post->getFeaturedImage()) ?>"
                                 alt="<?= $escaper->escapeHtmlAttr($post->getTitle()) ?>"
                                 class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                 loading="lazy"/>
                        </a>
                    <?php endif; ?>

                    <div class="p-6">
                        <h2 class="text-xl font-semibold mb-3">
                            <a href="<?= $escaper->escapeUrl($block->getPostUrl($post)) ?>"
                               class="text-gray-900 hover:text-primary transition-colors duration-200">
                                <?= $escaper->escapeHtml($post->getTitle()) ?>
                            </a>
                        </h2>

                        <div class="flex flex-wrap items-center text-sm text-gray-500 mb-4 gap-4">
                            <?php if ($post->getAuthor()): ?>
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <?= $escaper->escapeHtml($post->getAuthor()) ?>
                                </span>
                            <?php endif; ?>
                            <span class="flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <?= $escaper->escapeHtml($post->getCreatedAt()) ?>
                            </span>
                        </div>

                        <p class="text-gray-600 mb-4 line-clamp-3">
                            <?= $escaper->escapeHtml(mb_substr(strip_tags($post->getContent()), 0, 150)) ?>...
                        </p>

                        <a href="<?= $escaper->escapeUrl($block->getPostUrl($post)) ?>"
                           class="inline-flex items-center text-primary font-medium hover:underline">
                            <?= $escaper->escapeHtml(__('Read More')) ?>
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </article>
            <?php endforeach; ?>
        </div>
    <?php else: ?>
        <div class="bg-gray-50 rounded-lg p-8 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            <p class="text-gray-500 text-lg">
                <?= $escaper->escapeHtml(__('No blog posts available.')) ?>
            </p>
        </div>
    <?php endif; ?>
</div>
