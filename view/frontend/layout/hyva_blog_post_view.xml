<?xml version="1.0"?>
<!--
/**
 * RequestDesk Blog - Hyva Theme Layout for Post View
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="RequestDesk\Blog\Block\PostView"
                   name="blog.post.view"
                   template="RequestDesk_Blog::hyva/post/view.phtml"
                   cacheable="false"/>
        </referenceContainer>
    </body>
</page>
