<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">requestdesk_blog_post_form.requestdesk_blog_post_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Post Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="RequestDesk\Blog\Block\Adminhtml\Post\Edit\BackButton"/>
            <button name="delete" class="RequestDesk\Blog\Block\Adminhtml\Post\Edit\DeleteButton"/>
            <button name="save" class="RequestDesk\Blog\Block\Adminhtml\Post\Edit\SaveButton"/>
            <button name="save_and_continue" class="RequestDesk\Blog\Block\Adminhtml\Post\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>requestdesk_blog_post_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>requestdesk_blog_post_form.requestdesk_blog_post_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="requestdesk_blog_post_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="requestdesk_blog/post/save"/>
        </settings>
        <dataProvider class="RequestDesk\Blog\Model\Post\DataProvider"
                      name="requestdesk_blog_post_form_data_source">
            <settings>
                <requestFieldName>post_id</requestFieldName>
                <primaryFieldName>post_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">General</label>
        </settings>

        <field name="post_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>

        <field name="title" sortOrder="10" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
            </settings>
        </field>

        <field name="url_key" sortOrder="20" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
            </settings>
        </field>

        <field name="author" sortOrder="30" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Author</label>
            </settings>
        </field>

        <field name="is_active" sortOrder="40" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Active</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="content">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
        </settings>

        <field name="content" sortOrder="10" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">400px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Content</label>
            </settings>
        </field>
    </fieldset>

    <fieldset name="seo">
        <settings>
            <label translate="true">SEO</label>
            <collapsible>true</collapsible>
        </settings>

        <field name="meta_title" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
            </settings>
        </field>

        <field name="meta_description" sortOrder="20" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
            </settings>
        </field>
    </fieldset>

    <fieldset name="sync_info">
        <settings>
            <label translate="true">RequestDesk Sync</label>
            <collapsible>true</collapsible>
        </settings>

        <field name="requestdesk_post_id" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">RequestDesk ID</label>
                <disabled>true</disabled>
            </settings>
        </field>

        <field name="requestdesk_sync_status" sortOrder="20" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Sync Status</label>
                <disabled>true</disabled>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="RequestDesk\Blog\Model\Post\Source\SyncStatus"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="requestdesk_last_sync" sortOrder="30" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Last Synced</label>
                <disabled>true</disabled>
            </settings>
        </field>
    </fieldset>
</form>
