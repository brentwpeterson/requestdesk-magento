<?xml version="1.0"?>
<!--
/**
 * RequestDesk Blog Dependency Injection Configuration
 *
 * @category  RequestDesk
 * @package   RequestDesk_Blog
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Interface Preferences -->
    <preference for="RequestDesk\Blog\Api\Data\PostInterface"
                type="RequestDesk\Blog\Model\Post"/>

    <preference for="RequestDesk\Blog\Api\Data\PostSearchResultsInterface"
                type="RequestDesk\Blog\Model\PostSearchResults"/>

    <preference for="RequestDesk\Blog\Api\PostRepositoryInterface"
                type="RequestDesk\Blog\Model\PostRepository"/>

    <preference for="RequestDesk\Blog\Api\PostManagementInterface"
                type="RequestDesk\Blog\Model\PostManagement"/>

    <preference for="RequestDesk\Blog\Api\DataExportInterface"
                type="RequestDesk\Blog\Model\DataExport"/>

    <preference for="RequestDesk\Blog\Api\ExternalBlogInterface"
                type="RequestDesk\Blog\Model\ExternalBlog"/>

    <!-- Admin Grid Data Provider -->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="requestdesk_blog_post_listing_data_source" xsi:type="string">RequestDesk\Blog\Model\ResourceModel\Post\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Grid Collection Virtual Type -->
    <virtualType name="RequestDesk\Blog\Model\ResourceModel\Post\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">requestdesk_blog_post</argument>
            <argument name="resourceModel" xsi:type="string">RequestDesk\Blog\Model\ResourceModel\Post</argument>
        </arguments>
    </virtualType>

    <!-- Product Export Service -->
    <type name="RequestDesk\Blog\Service\ProductExportService">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
        </arguments>
    </type>

    <!-- Post Import Service -->
    <type name="RequestDesk\Blog\Service\PostImportService">
        <arguments>
            <argument name="logger" xsi:type="object">Psr\Log\LoggerInterface</argument>
        </arguments>
    </type>

</config>
