<?xml version="1.0"?>
<!--
/**
 * RequestDesk Blog - Frontend Dependency Injection (Hyva Compatibility)
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Register with Hyva Compat Module Fallback -->
    <type name="Hyva\CompatModuleFallback\Model\CompatModuleRegistry">
        <arguments>
            <argument name="compatModules" xsi:type="array">
                <item name="requestdesk-blog-hyva-compatibility" xsi:type="array">
                    <item name="original_module" xsi:type="string">RequestDesk_Blog</item>
                    <item name="compat_module" xsi:type="string">RequestDesk_Blog</item>
                </item>
            </argument>
        </arguments>
    </type>

</config>
