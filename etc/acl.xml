<?xml version="1.0"?>
<!--
/**
 * RequestDesk Blog ACL Configuration
 *
 * Defines permissions for API access and admin operations.
 *
 * @category  RequestDesk
 * @package   RequestDesk_Blog
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="RequestDesk_Blog::blog" title="RequestDesk Blog" sortOrder="100">
                        <resource id="RequestDesk_Blog::view" title="View Blog Posts" sortOrder="10"/>
                        <resource id="RequestDesk_Blog::manage" title="Manage Blog Posts" sortOrder="20"/>
                        <resource id="RequestDesk_Blog::sync" title="Sync Products to RequestDesk" sortOrder="25"/>
                        <resource id="RequestDesk_Blog::import" title="Import Posts from RequestDesk" sortOrder="26"/>
                        <resource id="RequestDesk_Blog::config" title="Configuration" sortOrder="30"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
